
@{
    ViewBag.Title = "ClienteEmpresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cliente Empresa</h2>

<div class="card">
    <div class="card-body">
        <button type="button" class="btn rounded-pill btn-primary" data-bs-toggle="modal" data-bs-target="#modalMantClienteEmpresa" id="btnNuevoCliente">Nuevo</button>

    </div>
</div>

<div class="card">
    @*<h5 class="card-header">Responsive Table</h5>*@
    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive text-nowrap">
                <table class="table" id="tbl_cliente_empresa">
                    <thead>
                        <tr class="text-nowrap">
                            <th>#</th>
                            <th>Ruc</th>
                            <th>Razon Social</th>
                            <th>Direccion</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="modalMantClienteEmpresa" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col col-lg-6 mb-3">
                        <label for="txtruc" class="form-label">Ruc</label>
                        <input type="text" id="txtruc" class="form-control" placeholder="Ingresa RUC">
                    </div>
                    <div class="col mb-3">
                        <button type="button" id="btnExtraerDatosRuc" class="btn rounded-pill btn-success">Extraer Datos</button>
                    </div>
                </div>
                <div class="row g-2">
                    <div class="col mb-0">
                        <label for="txtrazonsocial" class="form-label">Razon Social</label>
                        <input type="text" id="txtrazonsocial" class="form-control">
                    </div>
                </div>
                <div class="row g-2">
                    <div class="col mb-0">
                        <label for="txtdireccion" class="form-label">Dirección</label>
                        <input type="text" id="txtdireccion" class="form-control">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Cerrar
                </button>
                <button type="button" class="btn btn-primary" id="btnGuardar">Guardar</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var urlGetListClienteEmpresa = '@Url.Action("GetListEmpresa", "Cliente")';
    var urlObtenerDatosRuc = '@Url.Action("ObtenerDatosRuc", "Cliente")';
    var urlSaveClienteEmpresa = '@Url.Action("SaveClienteEmpresa", "Cliente")';
    var urlDeleteClienteFactura = '@Url.Action("DeleteClienteFactura", "Cliente")';
</script>

<script src="~/Scripts/cliente_empresa.js"></script>